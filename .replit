modules = ["web"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Start Dev Server"

[[workflows.workflow]]
name = "Build Project"
author = 43931040
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "mkdir -p dist"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cp index.html dist/"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cp *.mp3 dist/ 2>/dev/null || true"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cp *.txt dist/ 2>/dev/null || true"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cp *.zip dist/ 2>/dev/null || true"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"Build completed - files copied to dist/\""

[[workflows.workflow]]
name = "Start Dev Server"
author = 43931040
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 -m http.server 5000 --bind 0.0.0.0"
